<% if @range == 'クリエイター' %>
  <% @members.each do |member| %>

    <%= image_tag member.get_profile_image(100,100) %></br>
    <%= member.name %>
  <% end %>
<% elsif @range == 'イラスト' %>
  <% @posts.each do |post| %>
  <%= render "public/template/index", post: post %>
  <% end %>
<% else %>
  <% @posts.each do |post| %>
  <%= render "public/template/index", post: post %>
  <% end %>
<% end %>

