      <div class= "follow_count">
        <span>
          フォロー
          <%= link_to member_follow_path(member_id: member) do %>
            <%= member.relationships.count %>
          <% end %>
        </span>
        <span>
          フォロワー
          <%= link_to member_follower_path(member_id: member) do %>
            <%= member.passive_relationships.count %>
          <% end %>
        </span>
      </div>

      <div class= "follow-button">
              <% if member != current_member %>
                <% if current_member.following?(member) %>
                  <%= link_to member_relationships_path(member_id: member), method: :delete do %>
                    <button type="button" class="btn btn-dark">フォロー解除</button>
                  <% end %>
                <% else %>
                  <%= link_to member_relationships_path(member_id: member), method: :post do %>
                    <button type="button" class="btn btn-primary">フォローする</button>
                  <% end %>
                <% end %>
              <% end %>
      </div>