<div class= "container-fluid">
    <div class= "row">

      <!--メンバーの情報画面-->
      <div class= "col-sm-12 col-md-3 col-lg-3">
        <main class= "my-page-form">
          <!--プロフィールアイコン-->
          <div class= "image">
            <%= image_tag @member.get_profile_image(250,250) %>
          </div>
          <div class= "name"><%= @member.name %></div>
          <!--編集アイコン-->
          <div class= "edit">
            <% if @member.name != 'guestmember' %>
              <%= link_to edit_member_path do %>
                <button type="button" class="btn btn-secondary"><i class="fas fa-user-cog"></i></button>
              <% end %>
            <% end %>
          </div>
          <!--自己紹介エリア-->
          <div class= "introduction">
            <div class= "box"><%= @member.introduction %></div>
          </div>
          <!--新規投稿ボタン-->
          <div class= "my-page-button-new">
              <%= link_to new_post_path do %>
              <button type="button" class="btn btn-primary">新規投稿</button>
              <% end %>
          </div>
          <!--応援一覧リンク-->
          <div class= "yells-link">
            <%= link_to '応援した作品一覧', yells_member_path(@member) %>
          </div>
        </main>
      </div>

          <!--メンバーの投稿一覧-->
      <div class= "col-sm-12 col-md-9 col-lg-9">
        <div class= "member-post-index">
          <div class= "my-page-title">
            <h2 class= "title">投稿作品</h2>
              <span class= "title-text1">【<%= @member.name %>】</span>
              <span class= "title-text2">さんのマイページ</span>
          </div>

          <div class= "my-page-posts">
            <% @posts.each do |post| %>
              <div class= "image">
                <%= link_to post_path(post.id) do %>
                  <%= image_tag post.get_image(200,200) %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>


    </div>
  </div>