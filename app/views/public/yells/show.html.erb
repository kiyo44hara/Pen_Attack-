<body class= "post-show-content">
  <div class= "container-fluid">
    <div class= "row">
      <div class= "col-sm-12 col-md-12 col-lg-12">
        <div class= "post-yells-page">
          <div class= "items">
<!--退会した会員の表示方法に問題がある為、後付けします。-->
            <!--見出し    -->
            <div>
              <h4>
                <span><%=image_tag @post.get_image(100,100) %></span>
                <span>応援メンバー</span>
              </h4>
            </div>

            <!--応援した会員一覧-->
            <% @yell_members.each do |member| %>
              <div class= "item">
                <div>
                  <span><%= image_tag member.get_profile_image(50,50) %></span>
                  <span><%= member.name %></span>
                  <span>
                    <%= link_to member_path(member) do %>
                      訪問する
                    <% end %>
                  </span>
                </div>
              </div>
            <% end %>
            <div class= "index-pagenate"><%= paginate @yell_members%></div>

          </div>
        </div>
      </div>
    </div>
  </div>
</body>