<body class= "post-new-content">
  <div class= "container-fluid">
    <div class= "row">
      <div class= "col-sm-12 col-md-12 col-lg-12">
        <div class= "post-new-page">
            <div class= "items">
              <h3 class= "title">新規投稿</h3>
              <%= form_with model: @post do |f| %>
                <h4>画像</h4>
                <span><%= f.file_field :image, accept: "image/*" %></span>

                <%= render "post_new_edit", f: f %>

                <div id= 'star'>
                <%= f.hidden_field :star, id: :review_star %>
                </div>

                <%= render "star", post: @post %>

                <div class= "post_new-button"><%= f.submit '作品を投稿', class: 'btn btn-success' %></div>
              <% end %>
            </div>
        </div>
      </div>
    </div>
  </div>
</body>
