<h4>新規投稿</h4>

<%= form_with model: @post do |f| %>

  <h4>画像</h4>
  <%= f.file_field :image, accept: "image/*" %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>作品紹介</h4>
  <%= f.text_area :body %>

  <h4>ここ見て！</h4>
  <%= f.text_field :appeal_point %>

  <h4>改善点</h4>
  <%= f.text_field :improve_point %>

  <h4>制作時間</h4>
  <%= f.text_field :production_time %><span>時間</span>

  <!--<h4>タグ</h4>-->

  <!--<h4>レートが入ります</h4>-->

  <div><%= f.submit '投稿' %></div>
<% end %>