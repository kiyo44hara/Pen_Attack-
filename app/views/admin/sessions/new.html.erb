<body class= log_in-admin-content>
  <div class= "container-fluid">
    <div class= "row">
      <div class= "col-sm-12 col-md-12 col-lg-12">
          <main class= "admin-sign_in">
            <div class= "items">
              <h2>管理者ログイン</h2>
                  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <div class="field">
                      <%= f.label :メールアドレス %>
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'メールアドレスを入力', class: "btn btn-light btn-sm btn-block mb-3" %>
                    </div>

                    <div class="field">
                      <%= f.label :パスワード %>
                    <%= f.password_field :password, autocomplete: "current-password", placeholder: 'パスワードを入力', class: "btn btn-light btn-sm btn-block mb-3" %>
                    </div>

                    <% if devise_mapping.rememberable? %>
                      <div class="last-field">
                        <%= f.check_box :remember_me %>
                        <%= f.label :remember_me %>
                      </div>
                    <% end %>

                    <div class="log_in-actions">
                      <%= f.submit "ログイン", class: 'btn btn-primary' %>
                    </div>
                  <% end %>
            </div>
          </main>
      </div>
    </div>
  </div>
</body>